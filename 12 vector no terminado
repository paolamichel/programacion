// vectores.cpp: define el punto de entrada de la aplicaci√≥n de consola.
//

#include "stdafx.h"

void cargar(int v[],int n)
{
int x;
for(int i=0;i<n;i++)
{
	printf("\n elemento :");
	scanf("%d",&x);
	v[i]=x;
}
}
void mostrar(int v[],int n)
{
for(int i=0;i<n;i++)
{
printf("%d", v[i]);
}
printf("\n");
}

int unir(int A[],int B[],int C[],int m,int n)
{
   for(int i=0;i<n;i++)
   {
   C[i]=A[i];
   printf("%d",C[i]);
   }
   for(int i=0;i<m;i++)
   {
   C[i]=B[i];
   printf("%d",C[i]);
   }
 
int main()
{
	int A[100];
    int B[100];
	int C[100];
	int n,m,a;
	printf(" \n ingresar la dimension del 1er vector:");
	scanf("%d",&n);
    printf(" \n ingresar la dimension del 2do vector:");
	scanf("%d",&m);
	cargar(A,n);
	mostrar(A,n);
    cargar(B,m);
	mostrar(B,m);
    a=unir(A,B,C,n,m);
	printf("el vector unido es : %d",a);
	return 0;
}
