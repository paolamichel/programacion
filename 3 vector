// vectores2.cpp: define el punto de entrada de la aplicaci√≥n de consola.
#include "stdafx.h"

void cargar(int v[],int n)
{
int x;
for(int i=0;i<n;i++)
{
	printf("\n elemento :");
	scanf("%d",&x);
	v[i]=x;
}
}
void mostrar(int v[],int n)
{
for(int i=0;i<n;i++)
{
printf("%d", v[i]);
}
printf("\n");
}

int sumapar(int v[],int n )
{
int s=0;
for(int i=0;i<n;i++)
{
	if(v[i]%2==0)
    {
		s=s+v[i];
	}
}
return s;
}

int menor(int v[],int n)
{
 int men=v[0];
 for(int i=0;i<n;i++)
{
	if(v[i]<men)
	{
		men=v[i];
	}
}
return men;
}
int main()
{
	int v[50],n,suma;
	printf(" \n ingresar la dimension del vector:");
	scanf("%d",&n);
	cargar(v,n);
	mostrar(v,n);
	suma=sumapar(v,n);
	printf("la suma de los pares es : %d",suma);
	return 0;

}
