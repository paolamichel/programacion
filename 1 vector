// vectores.cpp: define el punto de entrada de la aplicaci√≥n de consola.
//

#include "stdafx.h"

void cargar(int v[],int n)
{
int x;
for(int i=0;i<n;i++)
{
	printf("\n elemento :");
	scanf("%d",&x);
	v[i]=x;
}
}



void mostrar(int v[],int n)
{
for(int i=0;i<n;i++)
{
printf("%d", v[i]);
}
printf("\n");
}

float promedio(int v[],int n)
{
int s=0;
float x=1;
for(int i=0;i<n;i++)
{
s=s+v[i];
}
x=s/n;
return (x);
}
int main()
{
	int v[50],n;
	float a;
	printf(" \n ingresar la dimension del vector:");
	scanf("%d",&n);
	cargar(v,n);
	mostrar(v,n);
	a=promedio(v,n);
	printf("%f",a);
	return 0;
}

